@using TodoListCore.Data
@model List<Todo>

@{
    ViewData["Title"] = "TodoList";
}

<h2>Çalışanlar</h2>
<link rel="stylesheet" href="~/twitter-bootstrap/css/bootstrap.min.css" />
<a href="/Kisi/YeniKisiEkle/" class="btn btn-success">Yeni Çalışan Ekle</a>
<br /><br />
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Action</th>
            <th scope="col">Completed</th>
            <th scope="col">Delete</th>
            <th scope="col">Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var x in Model)
            {          
        <tr>
            <td>@x.Action</td>
            <td>@x.Completed</td>
            <td><a href="/Kisi/KisiSil/@x.Id" class="btn btn-danger" onclick = "return confirm('Silmek istediğinizden emin misiniz?');">Sil</a></td>
            <td><a href="/Kisi/KisiGetir/@x.Id" class="btn btn-primary">Güncelle</a></td>
        </tr>
        }
    </tbody>
</table>

